using Gtk 4.0;
using Adw 1;

Adw.ExpanderRow cas_settings {
  title: "Enable CAS (Contrast Adaptive Sharpening)";

  [action]
  Switch gtk_switch {
    valign: center;
  }

  Adw.ActionRow {
    title: "Sharpening";
    hexpand: true;

    [suffix]
    SpinButton gtk_spin_button {
      valign: center;
      digits: 2;
      adjustment: Adjustment {
          lower: 0.0;
          upper: 1.0;
          step-increment: 0.05;
        };
    }
  }
}